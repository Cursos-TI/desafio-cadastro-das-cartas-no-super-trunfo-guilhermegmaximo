#include <stdio.h>

typedef struct {
    int populacao;
    float area;
    float pib;
    int pontos_turisticos;
    float densidade_populacional;
    float pib_per_capita;
} Cidade;

int main() {
    Cidade cidade1, cidade2;

    // Cadastro da primeira cidade
    printf("Cadastro da Cidade A01:\n");
    printf("Populacao: ");
    scanf("%d", &cidade1.populacao);
    printf("Area (em km²): ");
    scanf("%f", &cidade1.area);
    printf("PIB (em bilhões de USD): ");
    scanf("%f", &cidade1.pib);
    printf("Numero de pontos turisticos: ");
    scanf("%d", &cidade1.pontos_turisticos);

    // Cálculo dos novos atributos para a Cidade A01
    cidade1.densidade_populacional = cidade1.populacao / cidade1.area;
    cidade1.pib_per_capita = cidade1.pib * 1000000000 / cidade1.populacao; // PIB per capita em USD

    // Cadastro da segunda cidade
    printf("\nCadastro da Cidade B02:\n");
    printf("Populacao: ");
    scanf("%d", &cidade2.populacao);
    printf("Area (em km²): ");
    scanf("%f", &cidade2.area);
    printf("PIB (em bilhões de USD): ");
    scanf("%f", &cidade2.pib);
    printf("Numero de pontos turisticos: ");
    scanf("%d", &cidade2.pontos_turisticos);

    // Cálculo dos novos atributos para a Cidade B02
    cidade2.densidade_populacional = cidade2.populacao / cidade2.area;
    cidade2.pib_per_capita = cidade2.pib * 1000000000 / cidade2.populacao; // PIB per capita em USD

    // Exibição dos dados cadastrados
    printf("\nDados cadastrados:\n");

    printf("\nCidade A01:\n");
    printf("Populacao: %d\n", cidade1.populacao);
    printf("Area: %.2f km²\n", cidade1.area);
    printf("PIB: %.2f bilhões de USD\n", cidade1.pib);
    printf("Numero de pontos turisticos: %d\n", cidade1.pontos_turisticos);
    printf("Densidade Populacional: %.2f habitantes/km²\n", cidade1.densidade_populacional);
    printf("PIB per capita: %.2f USD\n", cidade1.pib_per_capita);

    printf("\nCidade B02:\n");
    printf("Populacao: %d\n", cidade2.populacao);
    printf("Area: %.2f km²\n", cidade2.area);
    printf("PIB: %.2f bilhões de USD\n", cidade2.pib);
    printf("Numero de pontos turisticos: %d\n", cidade2.pontos_turisticos);
    printf("Densidade Populacional: %.2f habitantes/km²\n", cidade2.densidade_populacional);
    printf("PIB per capita: %.2f USD\n", cidade2.pib_per_capita);

    return 0;
}
